probe nfsd.proc.entries {
  printf("%s %s %s %s ", tz_ctime(gettimeofday_s()), client_ip, name, argstr);
  filename .= "" // ensure this var exists for all nfsd probes
  if (fh)
    printf("%s%s%s",
           task_dentry_path(task_current(),
                            fh->fh_dentry,
                            fh->fh_export->ex_path->mnt),
           (filename == "") ? "" : "/",
           filename)
  printf("\n")
}
